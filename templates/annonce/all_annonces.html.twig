{% extends 'base.html.twig' %}

{% block title %}Annonces en ligne{% endblock %}

{% block body %}
    {% include('./navBar.html.twig') %}
<div class="container is-widescreen">
    <br>
    <br>
    <div class="box mt-4">
        <form id="filters">
            <div class="columns is-multiline">
                {# Type d'annonce #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Type d'annonce</label>
                        <div class="control">
                            {% for typeAnnonce in listTypeAnnonces %}
                                <label class="checkbox">
                                    <input type="checkbox" name="listTypeAnnonces[]" value="{{ typeAnnonce.id }}">
                                    {{ typeAnnonce.libelle }}
                                </label>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {# Race #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Race</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select name="race">
                                    <option value="">Toutes les races</option>
                                    {% for race in races %}
                                        <option value="{{ race.id }}">{{ race.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                {# Robe #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Robe</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select name="robe">
                                    <option value="">Toutes les robes</option>
                                    {% for robe in robes %}
                                        <option value="{{ robe.id }}">{{ robe.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                {# Age #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Âge</label>
                        <div class="field has-addons">
                            <div class="control">
                                <input class="input" type="number" name="ageMin" placeholder="Min">
                            </div>
                            <div class="control">
                                <a class="button is-static">à</a>
                            </div>
                            <div class="control">
                                <input class="input" type="number" name="ageMax" placeholder="Max">
                            </div>
                        </div>
                    </div>
                </div>

                {# Département #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Localisation</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select name="departement">
                                    <option value="">Tous les départements</option>
                                    {% for departement in departements %}
                                        <option value="{{ departement.id }}">{{ departement.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                {# Type d'équidé #}
                <div class="column is-4">
                    <div class="field">
                        <label class="label">Type d'équidé</label>
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select name="typeEquide">
                                    <option value="">Tous les types</option>
                                    {% for type in typesEquides %}
                                        <option value="{{ type.id }}">{{ type.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <br>
    <br>
    <div class="columns" id="content">
        {% for annonce in listAnnonces %}
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            {% if annonce.images is not empty %}
                                <img src="{{ asset(annonce.images.first.lienImage) }}" alt="Image">
                            {% else %}
                                <p>Aucune image disponible pour cette annonce.</p>
                            {% endif %}
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <p class="title is-4">{{ annonce.titre }}</p>
                                <p class="subtitle is-6">{{ annonce.prix }} €</p>
                            </div>
                        </div>
                        <div class="content">
                            <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}"><button type="button" class="button is-fullwidth is-primary is-light">En savoir plus</button></a>
                            <br>
                            <time datetime="2016-1-1">Annonce postée le {{ annonce.dateCreation|date("d/m/Y") }}</time>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <div class="container my-6">
        <div class="columns is-variable is-8">
            {# Colonne de gauche avec images #}
            <div class="column is-half">
                <div class="card">
                    <div class="card-image">
                        {% for image in annonce.images %}
                            <figure class="image">
                                <img src="{{ asset(image.lienImage) }}" alt="Photo de {{ annonce.equide.nom }}">
                            </figure>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# Colonne de droite avec infos #}
            <div class="column">
                <div class="content">
                    <div class="is-flex is-align-items-center">
                        <h1 class="title is-3 mb-2 mr-6">{{ annonce.titre }}</h1>
                        {% if app.user == annonce.utilisateurannonce %}
                            <div class="is-flex is-align-items-center">
                                <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="buttonLight is-small mr-4">
                                    <i class="fas fa-edit"></i>
                                </a>
                                {% include('annonce/_delete_form.html.twig') %}
                            </div>
                        {% endif %}
                    </div>
                    <p class="title is-3 has-text-primary mb-6">{{ annonce.prix }} €</p>

                    <div class="box">
                        <table class="table is-fullwidth">
                            <tr>
                                <th>Nom de l'équidé</th>
                                <td>{{ annonce.equide.nom }}                                 <a href="{{ annonce.equide.lienhn }}" class="button is-small is-info is-light mb-3">
                                <span class="icon">
                                    <i class="fas fa-external-link-alt"></i>
                                </span>
                                        <span>Infos Haras Nationaux</span>
                                    </a></td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ annonce.equide.dateNaiss|date("d/m/Y") }}</td>
                            </tr>
                            <tr>
                                <th>Taille</th>
                                <td>{{ annonce.equide.taille }} cm</td>
                            </tr>
                            <tr>
                                <th>Race</th>
                                <td>{{ annonce.equide.race.libelle }}</td>
                            </tr>
                            <tr>
                                <th>Robe</th>
                                <td>{{ annonce.equide.robe.libelle }}</td>
                            </tr>
                            <tr>
                                <th>Localisation</th>
                                <td>{{ annonce.equide.dep.libelle }} en {{ annonce.equide.dep.regiondep.libelle }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="box">
                        <h3 class="title is-5">Description</h3>
                        <p>{{ annonce.description }}</p>
                    </div>

                    <div class="box">
                        <div class="media">
                            <div class="media-content">
                                <p class="subtitle is-6">Annonce postée par <strong>{{ annonce.utilisateurannonce.login }}</strong></p>
                            </div>
                        </div>
                    </div>

                    <div class="buttons">
                        <a class="button is-primary is-medium" href="{{ path('contactVendeur', {'id': annonce.id}) }}">
                        <span class="icon">
                            <i class="fa-regular fa-message"></i>
                        </span>
                            <span>Contacter le propriétaire</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}